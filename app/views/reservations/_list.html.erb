
  <% @reservations.each do |reservation| %>
   <div class="card mb-2">
    <div class="card-body" id="<%= dom_id(reservation) %>">
      <h5 class="card-title"><%= reservation.gear.name %></h5>
      <%# <p class="card-text">
        <strong>Owner Email:</strong> <%= reservation.gear.user.email %>
      <%# </p> %>
      <%# <p class="card-text">
        <strong>Requester Email:</strong> <%= reservation.user.email %>
      <%# </p> %>
      <div class="d-flex justify-content-between">
        <p class="card-text">
          <strong>Reserved Period:</strong> <%= reservation.reserve_from %> to <%= reservation.reserve_to %>
        </p>
        <p class="card-text">
          <strong>Total Price:</strong> $<%= reservation.total_price %>
        </p>
      </div>
      <div class="d-flex justify-content-between">
        <p class="card-text">
          <strong>Reservation Status:</strong> <%= reservation.reserve_status %>
        </p>
        <p class="card-text">
          <strong>Payment Status:</strong> <%= reservation.payment_status %>
        </p>
      </div>
      <% if reservation.reserve_status == "Reserved" %>
        <%= link_to "Edit this reservation", edit_reservation_path(reservation), class: "btn btn-primary float-end" if policy(reservation).update? %>
      <% end %>
      <%= link_to "Add a Review", new_reservation_review_path(reservation), class: "btn btn-primary btn-block w-100 mt-3" if reservation.user == current_user%>
      <%= link_to "Confirm Reservation", confirm_reservation_path(reservation), method: :patch, class: "btn btn-primary btn-block btn-success" if reservation.gear.user == current_user && reservation.reserve_status == "Pending" %>
    </div>
  </div>
  <% end %>

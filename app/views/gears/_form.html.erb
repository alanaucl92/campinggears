<%= simple_form_for(@gear) do |f| %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :brand %>
    <%= f.input :price %>
    <%= f.input :description %>

    <%= f.input :category, as: :select, collection: ["Sleeping Bag", "Backpack", "Cup", "Clothes", "Tent"]%>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

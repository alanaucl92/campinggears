<div id="lists">
  <% @gears.each do |gear| %>

    <div id="<%= dom_id gear %>">
      <p>
      <strong>Name:</strong>
       <%= gear.name %>
      </p>
      <p>
      <strong>Category:</strong>
       <%= gear.category %>
      </p>
      <p>
      <strong>Price:</strong>
       <%= gear.price %>
      </p>

      <%= cl_image_tag("vj6szkzbuwqehizfbr7s",
      width: 400, height: 300, crop: :fill) %>
    </div>

    <p>
      <%= link_to "Show this gear", gear %>
    </p>
  <% end %>
</div>

<p style="color: green"><%= notice %></p>

<div class="row m-5", id="gear_card">
  <%= cl_image_tag @gear.photo.key, class:"col-6", height: 300, width: 500 %>
  <div class="mx-3 col-5">
    <h5><strong> <%= @gear.brand %> </strong></h5>
    <h3><strong> <%= @gear.name %> </strong></h3>
    <h6><strong> $<%= @gear.price %> per day </strong></h6>

    <div>
      <%= link_to "Reserve Now", new_gear_reservation_path(@gear), class: "btn btn-primary btn-block w-100 mt-3" if @gear.user != current_user %>
      <%= link_to "Edit", edit_gear_path(@gear), class: "btn btn-primary btn-block w-100 mt-3" if policy(@gear).edit? %>
      <%= button_to "Remove", @gear, class: "btn btn-secondary btn-block w-100 mt-2", method: :delete if policy(@gear).destroy? %>
    </div>

    <p class="mt-3 mb-2"><strong>Category:</strong> <%= @gear.category %></p>

    <p class="my-0">
      <strong>Description:</strong>
      <%= @gear.description %>
    </p>
  </div>
</div>
